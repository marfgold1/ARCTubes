<% layout('layout') %>
<br>
<a class="btn btn-primary" href="/" role="button">Back</a>
<h1>
<h3 class="text-center display-1">Buat Pertanyaan Baru</h3>
<br>
<br>
<br>
<form id="form-create">
    <div class="mb-3">
        <%- include('form', {label: "Slug", name: "slug", type: "text", tooltip: "Slug should be unique, contains only alphanumerics and delimited by - without any space, e.g. `my-first-post` or `a-p03try`.", required: true}) %>
    </div>
    <div class="mb-3">
        <%- include('form', {label: "Soal", name: "soal", type: "text", required: true}) %>
    </div>
    <div class="mb-3">
        <%- include('form', {label: "Jawaban Benar", name: "jawaban_benar", type: "text", required: true}) %>
    </div>
    <div class="mb-3">
        <%- include('form', {label: "Jawaban Salah 1", name: "jawaban_salah_1", type: "text", required: true}) %>
    </div>
    <div class="mb-3">
        <%- include('form', {label: "Jawaban Salah 2", name: "jawaban_salah_2", type: "text", required: true}) %>
    </div>
    <div class="mb-3">
        <%- include('form', {label: "Jawaban Salah 3", name: "jawaban_salah_3", type: "text", required: true}) %>
    </div>
    <button type="submit" class="btn btn-primary">Buat Post</button>
</form>


<script src="/form.js"></script>
<script>
    let form = $("#form-create")[0];
    setFormProcess(form, "/manage/create", "POST", function(){
        alert("Pertanyaan Sudah Ditambahkan");
        form.reset();
    });
</script>
